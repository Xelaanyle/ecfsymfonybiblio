{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>
	<a href="{{ path('app_admin_user_new_admin') }}">Crée un nouveau Admin</a>
	<a href="{{ path('app_admin_user_new_emprunteur') }}">Crée un nouvelle Emprunteur</a>
	<table>
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Password</th>
				<th>Actif</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>{{ user.password }}</td>
					<td>{{ user.actif ? 'Yes' : 'No' }}</td>
					<td>
						<a href="{{ path('app_admin_user_show', {'id': user.id}) }}">Voir</a>
						<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Modifier</a>
						<a href="{{ path('app_admin_user_password', {'id': user.id}) }}">Changer mot de passe</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
