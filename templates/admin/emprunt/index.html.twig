{% extends 'base.html.twig' %}

{% block title %}Emprunt index
{% endblock %}

{% block body %}
	<h1>Emprunt index</h1>
	<a href="{{ path('app_admin_emprunt_new') }}">Cr√©e un nouveau emprunt</a>
	<table>
		<thead>
			<tr>
				<th>Id</th>
				<th>Livre</th>
				<th>DateEmprunt</th>
				<th>DateRetour</th>
				<th>Emprunteur</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for emprunt in emprunts %}
				<tr>
					<td>{{ emprunt.id }}</td>
					<td>{{ emprunt.livre.titre }}</td>
					<td>{{ emprunt.dateEmprunt ? emprunt.dateEmprunt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ emprunt.dateRetour ? emprunt.dateRetour|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ emprunt.emprunteur.nom }} {{ emprunt.emprunteur.prenom }}</td>
					<td>
						<a href="{{ path('app_admin_emprunt_show', {'id': emprunt.id}) }}">Voir</a>
						<a href="{{ path('app_admin_emprunt_edit', {'id': emprunt.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
