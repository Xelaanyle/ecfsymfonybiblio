{% extends 'base.html.twig' %}

{% block title %}Auteur
{% endblock %}

{% block body %}
	<h1>Auteur</h1>

	<table>
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ auteur.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ auteur.nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ auteur.prenom }}</td>
			</tr>
			<tr>
				<th>Livres</th>
				<td>
					{% if not auteur.livres %}
						aucun livre
					{% else %}
						{% for livre in auteur.livres %}
							<a href="{{ path('app_admin_livre_show', {'id': livre.id}) }}">{{ livre.titre }}</a>
						{% endfor %}
					{% endif %}
				</td>
			</tr>
		</tbody>
	</td>
</tr></tbody></table><a href="{{ path('app_admin_auteur_index') }}">Retour</a><a href="{{ path('app_admin_auteur_edit', {'id': auteur.id}) }}">Modifier</a>{{ include('admin/auteur/_delete_form.html.twig') }}{% endblock %}
